{
  "format": "custom",
  "id": "post",
  "label": "Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "hero": {
        "type": "Image",
        "config": {
          "label": "Portada",
          "constraint": {
            "width": 1920,
            "height": 1080
          },
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Titulo (H1)",
          "placeholder": ""
        }
      },
      "seo_title": {
        "type": "Text",
        "config": {
          "label": "Título SEO",
          "placeholder": ""
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Descripción SEO",
          "placeholder": ""
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Fecha de publicación",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Autor (opcional)",
          "placeholder": ""
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Cuerpo de texto",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,heading2,heading3,strong,em,hyperlink,image,list-item,o-list-item"
        }
      }
    }
  }
}
